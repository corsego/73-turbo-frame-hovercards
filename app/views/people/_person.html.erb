<div id="<%= dom_id person %>">

  <!--hover to load turbo frame-->
  <span class="hoverWrapper">
    <%= person.first_name %>
    <%= person.last_name %>
    <div id="hoverContent">
      <%= turbo_frame_tag dom_id(person, :thumbnail), target: "_top", loading: :lazy, src: hovercard_person_path(person) do %>
        Loading...
      <% end %>
    </div>
  </span>

  <!--click to load turbo frame-->
  <details>
    <summary>
      <%= person.first_name %>
      <%= person.last_name %>
    </summary>
    <%= turbo_frame_tag dom_id(person, :thumbnail), target: "_top", loading: :lazy, src: hovercard_person_path(person) do %>
      Loading...
    <% end %>
  </details>

</div>
